<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.hopapps.villaggiorock" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".EventActivity"
            android:label="@string/event_title"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".MenuActivity" >
        </activity>
        <activity android:name=".EventsActivity" >
        </activity>
        <activity android:name=".GadgetsActivity" >
        </activity>
        <activity android:name=".AlbumsActivity" >
        </activity>
        <activity android:name=".AlbumPhotosActivity" >
        </activity>
        <activity android:name=".SplashScreen" >
        </activity>
        <activity
            android:name=".ReservationActivity"
            android:label="@string/title_activity_reservation"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".GadgetActivity"
            android:label="@string/title_activity_gadget"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".PlaylistActivity"
            android:label="@string/title_activity_playlist"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.spotify.sdk.android.authentication.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            />
    </application>

</manifest>
